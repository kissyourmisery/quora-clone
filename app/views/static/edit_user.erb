<% if logged_in? %>

	<h1>Edit your user particulars!</h1>

	<form method="post" action="/users/<%= current_user.id %>">
		<input type="hidden" name="_method" value="put">
		<label>Name:</label>
		<input type="text" name="user[name]" value="<%= current_user.name %>">
		<label>Email:</label>
		<input type="text" name="user[email]" value="<%= current_user.email %>">
		<label>Password:</label>
		<input type="text" name="user[password]" value="<%= current_user.password %>">
		<input type="submit" value="Update!">
	</form>

<% else %>

	<form method="get" action="/register">
		<input type="submit" value="Register/Login!">
	</form>	

<% end %>