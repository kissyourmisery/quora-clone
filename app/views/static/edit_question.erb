<% if logged_in? %>

	<h1>Edit Question</h1>

	<form method="post" action="/questions/<%= @question.id %>">
		<input type="hidden" name="_method" value="put">
		<input type="text" name="question[question_text]" value="<%= @question.question_text %>">
		<input type="submit" value="Edit question">
	</form>



<% end %>

