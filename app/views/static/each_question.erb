<h1><%= @question.question_text %></h1>
<h4><%= @question.count_upvotes %> Upvotes</h4>
<h4><%= @question.count_downvotes %> Downvotes</h4>


<ul>
	<% @question.answers.each do |answer| %>
		<li><%= answer.answer_text %></li>
	<% end %>
</ul>


<% if logged_in? %>
	<form method="post" action="/questions">
		<input type=text placeholder="Post another question!" name="question">
		<input type="submit" value="Submit!">
	</form>


	<form method="post" action="/answers">
		<input type=text placeholder="Or answer this question!" name="answer">
		<input type="hidden" name="question[id]" value="<%= @question.id %>">
		<input type="submit" value="Submit!">
	</form>




<% end %>



