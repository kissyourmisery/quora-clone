<h4><form method="get" action="/users/<%= current_user.id %>/edit">
				<input class="beautify" type="submit" value="Update your particulars!">
			</form></h4>





<h2>My Questions:</h2>
<ul>
	<% current_user.questions.all.each do |question| %>
		<li><a href="/questions/<%= question.id %>"><%= question.question_text %></a> <a href="/questions/<%= question.id %>/edit">Edit</a> <a href="/questions/<%= question.id %>/delete">Delete</a></li>
	<% end %>
</ul>

<br>

<h2>My Answers:</h2>
<ul>
	<% current_user.answers.all.each do |answer| %>
		<li><a href="/questions/<%= answer.question_id %>"><%= answer.answer_text %></a> <a href="/answers/<%= answer.id %>/edit">Edit</a> <a href="/answers/<%= answer.id %>/delete">Delete</a></li>
	<% end %>
</ul>

<div>

<button id="myBtn" class="beautify">Add a new question</button>

<div id="myModal" class="modal">
	<div class="modal-content">
		<span class="close">x</span>
		<h1>Add a Question</h1>
		<form method="post" action="/questions">
			<input class="form-style" type=text placeholder="Post a question!" name="question">
		</form>
	</div>
</div>



