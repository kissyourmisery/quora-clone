

<ul>
	<% Question.all.each do |question| %>
		<li><a href="/questions/<%=question.id%>"><%=question.question_text%></a>
			<div class="upvote">
				<form action="/questions/<%=question.id%>/upvote" method="post">
					<input type="submit" value="Upvote">
				</form>
			</div>

			<div class="downvote">
				<form action="/questions/<%=question.id%>/downvote" method="post">
					<input type="submit" value="Downvote">
				</form>
			</div>
		</li>
	<% end %>
</ul>

<% if logged_in? %>
	<h4><form method="get" action="/questions/new">
					<input class="beautify" type="submit" value="Add a new question">
			</form></h4>

<% end %>






